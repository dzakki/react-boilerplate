{
  "name": "react-boilerplate",
  "description": "An opinionated React boilerplate",
  "author": "dzakki@gmail.com",
  "contributors": [
    {
      "name": "Dzakki",
      "email": "dzakki@gmail.com",
      "url": "https://dzakki.github.io"
    }
  ],
  "license": "MIT",
  "version": "1.1.0",
  "private": true,
  "dependencies": {
    "@react-hook/media-query": "^1.1.1",
    "@reduxjs/toolkit": "^1.3.6",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "bulma": "^0.9.0",
    "classnames": "^2.2.6",
    "formik": "^2.1.5",
    "lodash": "^4.17.19",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-redux-toastr": "^7.6.5",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "redux-persist": "^6.0.0",
    "yup": "^0.29.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "./node_modules/.bin/standard",
    "lint-fix": "./node_modules/.bin/standard --fix",
    "deploy": "react-scripts build"
  },
  "standard": {
    "ignore": [
      "build/*",
      "node_modules/*",
      "functions/node_modules/*"
    ],
    "env": [
      "jest",
      "es6",
      "browser"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-fix"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "standard": "^14.3.4"
  }
}